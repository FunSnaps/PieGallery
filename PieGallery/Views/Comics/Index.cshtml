@model IEnumerable<PieGallery.Models.Comics>

@{
  ViewData["Title"] = "Index";
}

<body class="comics-body">

  <div class="homeTitle animate__animated animate__wobble">
    Contribute!
  </div>

  <p>
    <a asp-controller="Comics" asp-action="Create" class="btn btn-dark"> <i class="fas fa-plus"></i> &nbsp;Create new entry!</a>
  </p>


  <div class="row">
    @foreach (var item in Model)
    {
      <div class="card" style="width: 20rem;">
        <img class="card-img-top" src="~/images/@item.Image" alt="Card image cap">

        <div class="card-body">

          <ul class="list-group list-group-flush">
            <li style="list-style-type: none" class="card-title">@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(modelItem => item.Title)</li>
            <li style="list-style-type: none" class="card-title">@Html.DisplayNameFor(model => model.Author): @Html.DisplayFor(modelItem => item.Author)</li>
            <li style="list-style-type: none" class="card-title">@Html.DisplayNameFor(model => model.Price): @Html.DisplayFor(modelItem => item.Price)</li>
          </ul>

          <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark options"><i class="fas fa-edit"></i>&nbsp;Edit</a>
          <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info options"><i class="fas fa-info-circle"></i> &nbsp;Info</a>
          <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger options"><i class="fas fa-trash-alt"></i>&nbsp;Delete</a>
        </div>
      </div>
    }
  </div>
</body>